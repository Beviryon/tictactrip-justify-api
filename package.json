{
  "name": "@beviryon/tictactrip-justify-api",
  "version": "1.0.0",
  "description": "API REST moderne de justification de texte - Test technique Tictactrip",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "mkdir -p dist && tsc && tsc-alias",
    "build:render": "rm -rf dist || true && tsc && tsc-alias",
    "start": "node dist/server.js",
    "demo": "node demo.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "biome check src/",
    "lint:fix": "biome check --apply src/",
    "format": "biome format --write src/",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "docker:build": "docker build -t justify-api .",
    "docker:run": "docker run -p 3000:3000 justify-api"
  },
  "keywords": [
    "api",
    "rest",
    "typescript",
    "justification",
    "tictactrip",
    "text-processing",
    "rate-limiting",
    "authentication"
  ],
  "author": {
    "name": "Beviryon ISSANGA NGOULOU",
    "email": "viryon.ngoulou@gmail.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/rate-limit": "^9.1.0",
    "express": "^5.1.0",
    "fastify": "^4.24.3",
    "nanoid": "^5.0.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.3.3",
    "@types/express": "^5.0.4",
    "@types/node": "^20.8.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "rimraf": "^5.0.5",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.1.2",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Beviryon/tictactrip-justify-api.git"
  },
  "bugs": {
    "url": "https://github.com/Beviryon/tictactrip-justify-api/issues"
  },
  "homepage": "https://github.com/Beviryon/tictactrip-justify-api#readme"
}
